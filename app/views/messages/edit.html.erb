<h1>Edit Message</h1>
<%= form_with(model: @message, url: message_path(@message), method: :patch) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <%= form.submit 'Update Message', class: 'btn btn-primary' %>
  <%= link_to 'Back', message_path(@message), class: 'btn btn-secondary' %>
<% end %>
