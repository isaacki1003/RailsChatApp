<h1>New Message</h1>
<%= form_with(model: @message, url: messages_path) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <%= form.submit 'Create Message', class: 'btn btn-primary' %>
  <%= link_to 'Back', messages_path, class: 'btn btn-secondary' %>
<% end %>
