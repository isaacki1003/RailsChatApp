<h1>Add User to Group</h1>

<%= form_with model: [@group, @group_user], url: group_group_users_path(@group) do |form| %>
  <% if @group_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group_user.errors.count, "error") %> prohibited this user from being added:</h2>
      <ul>
      <% @group_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Select user" %>
  </div>

  <div class="actions">
    <%= form.submit "Add User to Group", class: "btn btn-primary" %>
  </div>
<% end %>
